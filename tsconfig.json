{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "build",
    "baseUrl": "./src",
    "rootDir": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "target": "es2019",
    "declaration": true,
    "declarationDir": "typings",
  },
  "include": [ "src/**/*" ],
}
